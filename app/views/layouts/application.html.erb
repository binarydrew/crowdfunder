<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">CrowdFunder</a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="<%= 'active' if @nav == :home %>">
            <%= link_to 'Home', :root %>
          </li>
          <li class="<%= 'active' if @nav == :projects %>">
            <%= link_to 'Projects', :projects %>
          </li>
         
        </ul>
      </div>
      <div class="pull-right">
        <% if logged_in? %>
          <%= link_to 'Logout', :sessions, :method => :delete, class: 'btn' %>
        <% else %>
          <%= link_to 'Sign Up', [:new, :user], class: 'btn btn-primary' %>
          <%= link_to 'Sign In', [:new, :session], class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
      <% elsif flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>

<%= yield %>

</body>
</html>
